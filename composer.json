{
    "name": "surfnet/yubikey-api-client-bundle",
    "description": "A Symfony bundle to integrate Yubikey OTP validation service.",
    "keywords": [
        "yubikey",
        "yubico"
    ],
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Surfnet\\YubikeyApiClientBundle\\": "src"
        }
    },
    "require": {
        "php": "^8.2",
        "surfnet/yubikey-api-client": "^2.3",
        "symfony/config": "^4.4|^5.0|^6.0",
        "symfony/dependency-injection": "^4.4|^5.0|^6.0",
        "symfony/http-kernel": "^4.4|^5.0|^6.0",
        "symfony/yaml": "^6.4",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpmd/phpmd": "^2.0",
        "phpunit/phpunit": "^9.0",
        "sensiolabs/security-checker": "^6",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "^3",
        "matthiasnoback/symfony-config-test": "^5.0",
        "symfony/framework-bundle": "^v5.4.36",
        "symfony/monolog-bundle": "^3.0",
        "slevomat/coding-standard": "^8.15",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/phpstan-mockery": "^1.1"
    },
    "scripts": {
        "check": [
            "@composer-validate",
            "@lint",
            "@phpcpd",
            "@phpcs",
            "@phpmd",
            "@phpstan",
            "@unit-tests"
        ],
        "composer-validate": "./ci/qa/validate",
        "lint": "./ci/qa/lint",
        "phpcs": "./ci/qa/phpcs",
        "phpcpd": "./ci/qa/phpcpd",
        "phpcbf": "./ci/qa/phpcbf",
        "phpmd": "./ci/qa/phpmd",
        "phpstan": "./ci/qa/phpstan",
        "phpstan-baseline": "./ci/qa/phpstan-update-baseline",
        "test": "./ci/qa/phpunit",
        "unit-tests": "./ci/qa/phpunit --testsuite=UnitTests",
        "web-tests": "./ci/qa/phpunit --testsuite=WebTests",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
